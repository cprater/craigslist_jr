<h1>Craigslist Jr.</h1>
<h2>Create Post on Category: <%=@category.name%></h2>

<form action="/:category_id/new" method="POST">
  <label for="post_title">Title: </label>
  <input type="text" name="post_title" id="post_title">
  <label for="post_content">Content: </label>
  <input type="text" name="post_content" id="post_content">
  <input style="display: none" type="text" name="category_id" value="<%= @category.id %>"></input>
  <input type="submit">
</form>
